{
  "_comment": "IMPORTANT: This file shows the format for ~/.cursor/mcp.json",
  "_note": "Cursor now uses ~/.cursor/mcp.json - NOT settings.json!",
  "_location": "~/.cursor/mcp.json",
  
  "mcpServers": {
    "ai-orchestrator": {
      "command": "/path/to/ai_orchestrator/venv/bin/python",
      "args": [
        "-m",
        "mcp_server.server"
      ],
      "cwd": "/path/to/ai_orchestrator",
      "env": {
        "PYTHONPATH": "/path/to/ai_orchestrator"
      }
    }
  },

  "_instructions": [
    "IMPORTANT: Cursor uses ~/.cursor/mcp.json for MCP configuration",
    "",
    "Option 1: Run the fix script (recommended)",
    "  ./cursor_integration/fix_cursor_mcp.sh",
    "",
    "Option 2: Manual setup",
    "  1. Create directory: mkdir -p ~/.cursor",
    "  2. Create file: nano ~/.cursor/mcp.json",
    "  3. Copy the mcpServers section above",
    "  4. Update paths to your installation",
    "  5. Completely quit and reopen Cursor",
    "",
    "Verify: Settings (Cmd+,) → Tools & Integrations → MCP Tools",
    "Look for ai-orchestrator with a green dot"
  ],

  "_macExample": {
    "_file": "~/.cursor/mcp.json",
    "mcpServers": {
      "ai-orchestrator": {
        "command": "/Users/yourname/ai-orchestrator/venv/bin/python",
        "args": ["-m", "mcp_server.server"],
        "cwd": "/Users/yourname/ai-orchestrator",
        "env": {
          "PYTHONPATH": "/Users/yourname/ai-orchestrator"
        }
      }
    }
  },

  "_linuxExample": {
    "_file": "~/.cursor/mcp.json",
    "mcpServers": {
      "ai-orchestrator": {
        "command": "/home/ubuntu/ai_orchestrator/venv/bin/python",
        "args": ["-m", "mcp_server.server"],
        "cwd": "/home/ubuntu/ai_orchestrator",
        "env": {
          "PYTHONPATH": "/home/ubuntu/ai_orchestrator"
        }
      }
    }
  },

  "_windowsExample": {
    "_file": "%USERPROFILE%\\.cursor\\mcp.json",
    "mcpServers": {
      "ai-orchestrator": {
        "command": "C:\\Users\\YourName\\ai_orchestrator\\venv\\Scripts\\python.exe",
        "args": ["-m", "mcp_server.server"],
        "cwd": "C:\\Users\\YourName\\ai_orchestrator",
        "env": {
          "PYTHONPATH": "C:\\Users\\YourName\\ai_orchestrator"
        }
      }
    }
  },

  "_withSystemPython": {
    "_comment": "Use if you don't have a virtual environment",
    "mcpServers": {
      "ai-orchestrator": {
        "command": "python3",
        "args": ["-m", "mcp_server.server"],
        "cwd": "/path/to/ai_orchestrator",
        "env": {
          "PYTHONPATH": "/path/to/ai_orchestrator"
        }
      }
    }
  },

  "_troubleshooting": {
    "configLocation": [
      "CORRECT: ~/.cursor/mcp.json",
      "WRONG: ~/Library/Application Support/Cursor/User/settings.json",
      "WRONG: ~/Library/Application Support/Cursor/User/globalStorage/mcp-settings.json"
    ],
    "serverNotStarting": [
      "1. Run: ./cursor_integration/diagnose_cursor_mcp.sh",
      "2. Verify Python path: which python3",
      "3. Test server: cd ai_orchestrator && PYTHONPATH=. python -m mcp_server.server",
      "4. Check .env file has valid API keys"
    ],
    "toolsNotAppearing": [
      "1. Completely quit Cursor (Cmd+Q on Mac)",
      "2. Reopen Cursor",
      "3. Check Settings → Tools & Integrations → MCP Tools",
      "4. Use Agent mode in Chat to access tools"
    ],
    "checkingLogs": [
      "1. Cmd+Shift+P → 'Developer: Show Logs'",
      "2. Select 'MCP Logs' from dropdown",
      "3. Look for error messages"
    ]
  }
}
